<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    
    <!-- Bootstrap & Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header class="sticky-top">
            <nav class="navbar navbar-expand-lg navbar-floating navbar-light">
                <div class="container-fluid px-4">
                    <a class="navbar-brand navbar-brand-modern" href="/">Task Manager</a>
                    
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarContent">
                        @if (ViewBag.CurrentUsername != null)
                        {
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                                       asp-controller="Home" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")" 
                                       asp-controller="Tasks" asp-action="Index">Tareas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")" 
                                       asp-controller="Projects" asp-action="Index">Proyectos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Comments" ? "active" : "")" 
                                       asp-controller="Comments" asp-action="Index">Comentarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "History" ? "active" : "")" 
                                       asp-controller="History" asp-action="Index">Historial</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")" 
                                       asp-controller="Notifications" asp-action="Index">Notificaciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Search" ? "active" : "")" 
                                       asp-controller="Search" asp-action="Index">B칰squeda</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-animated @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")" 
                                       asp-controller="Reports" asp-action="Index">Reportes</a>
                                </li>
                            </ul>
                            
                            <div class="d-flex align-items-center gap-3 ms-lg-4">
                                <div class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        游녦 @ViewBag.CurrentUsername
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown" style="border-radius: 12px;">
                                        <li><span class="dropdown-header text-muted text-uppercase small" style="font-size: 0.7rem;">Cuenta</span></li>
                                        <li><a class="dropdown-item" href="#">Perfil</a></li>
                                        <li><a class="dropdown-item" href="#">Configuraci칩n</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a href="@Url.Action("Logout", "Account")" class="dropdown-item text-danger d-flex align-items-center gap-2">
                                                <span>Cerrar Sesi칩n</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </header>

        <main class="flex-grow-1">
            <div class="container-fluid px-4 py-4">
                
                <div class="fade-in-up">
                    @RenderBody()
                </div>
            </div>
        </main>

        <footer class="footer mt-auto py-3 text-center text-muted small">
            <div class="container">
                &copy; 2025 Task Manager - Saas Edition
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 1. Toast Notifications for TempData
            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: '@TempData["Success"]',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'error',
                    title: '@TempData["Error"]',
                    showConfirmButton: false,
                    timer: 4000,
                    timerProgressBar: true
                });
                </text>
            }

            // 2. Global Delete Confirmation Interceptor
            // Finds all forms submitting to an action that includes 'Delete' or has a specific class
            document.addEventListener('submit', function(e) {
                const form = e.target;
                if (form.action.includes('Delete') || form.classList.contains('delete-form')) {
                    e.preventDefault(); // Stop default submit
                    
                    Swal.fire({
                        title: '쮼st치s seguro?',
                        text: "Esta acci칩n no se puede deshacer.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545', // Bootstrap Danger
                        cancelButtonColor: '#6c757d',  // Bootstrap Secondary
                        confirmButtonText: 'S칤, eliminar',
                        cancelButtonText: 'Cancelar',
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit(); // Resume submit if confirmed
                        }
                    });
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
