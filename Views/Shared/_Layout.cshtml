<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    
    <!-- Bootstrap & Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            @if (ViewBag.CurrentUsername != null)
            {
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
                    <div class="container-fluid px-4">
                        <span class="navbar-brand fw-bold font-poppins">Task Manager</span>
                        <div class="d-flex align-items-center">
                            <span class="text-white-50 me-3 small">@ViewBag.CurrentUsername</span>
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-outline-light rounded-pill px-3">Salir</a>
                        </div>
                    </div>
                </nav>
                <div class="bg-white border-bottom shadow-sm">
                    <div class="container-fluid px-4">
                        <ul class="nav nav-tabs border-0" id="mainNav">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")" 
                                   asp-controller="Tasks" asp-action="Index">Tareas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")" 
                                   asp-controller="Projects" asp-action="Index">Proyectos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Comments" ? "active" : "")" 
                                   asp-controller="Comments" asp-action="Index">Comentarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "History" ? "active" : "")" 
                                   asp-controller="History" asp-action="Index">Historial</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")" 
                                   asp-controller="Notifications" asp-action="Index">Notificaciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Search" ? "active" : "")" 
                                   asp-controller="Search" asp-action="Index">BÃºsqueda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")" 
                                   asp-controller="Reports" asp-action="Index">Reportes</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <nav class="navbar navbar-dark bg-dark mb-4">
                    <div class="container-fluid justify-content-center">
                        <span class="navbar-brand mb-0 h1 font-poppins">Task Manager</span>
                    </div>
                </nav>
            }
        </header>

        <main class="flex-grow-1">
            <div class="container-fluid px-4 py-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-3 border-0" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm rounded-3 border-0" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <div class="fade-in-up">
                    @RenderBody()
                </div>
            </div>
        </main>

        <footer class="footer mt-auto py-3 text-center text-muted small">
            <div class="container">
                &copy; 2025 Task Manager - Saas Edition
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
