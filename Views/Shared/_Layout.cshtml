<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }
        .navbar-dark {
            background-color: #343a40 !important;
        }
        .nav-tabs .nav-link {
            color: #495057;
        }
        .nav-tabs .nav-link.active {
            font-weight: bold;
        }
        .content-area {
            background-color: white;
            border: 1px solid #dee2e6;
            padding: 20px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        @if (ViewBag.CurrentUsername != null)
        {
            <div class="bg-dark text-white p-3 d-flex justify-content-between align-items-center">
                <h4 class="m-0">Task Manager</h4>
                <div>
                    <span>Usuario: @ViewBag.CurrentUsername</span>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-light btn-sm ms-3">Salir</a>
                </div>
            </div>
            <ul class="nav nav-tabs mt-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")" 
                       asp-controller="Tasks" asp-action="Index">Tareas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")" 
                       asp-controller="Projects" asp-action="Index">Proyectos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Comments" ? "active" : "")" 
                       asp-controller="Comments" asp-action="Index">Comentarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "History" ? "active" : "")" 
                       asp-controller="History" asp-action="Index">Historial</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")" 
                       asp-controller="Notifications" asp-action="Index">Notificaciones</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Search" ? "active" : "")" 
                       asp-controller="Search" asp-action="Index">BÃºsqueda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")" 
                       asp-controller="Reports" asp-action="Index">Reportes</a>
                </li>
            </ul>
        }
        else
        {
            <div class="bg-dark text-white p-3 text-center">
                <h4 class="m-0">Task Manager</h4>
            </div>
        }

        <div class="content-area">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
