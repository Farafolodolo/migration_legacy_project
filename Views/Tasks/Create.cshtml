@model TaskManagerMVC.Models.ViewModels.TaskCreateViewModel
@{
    ViewData["Title"] = "Nueva Tarea";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4 border-0">
                    <h4 class="mb-0 fw-bold font-poppins"><i class="bi bi-plus-circle me-2"></i>Nueva Tarea</h4>
                    <p class="mb-0 opacity-75 small">Completa los detalles para crear una nueva tarea</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Create" method="post">
                        
                        <!-- Title & Description -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold text-secondary small text-uppercase">Título de la Tarea</label>
                            <input asp-for="Title" class="form-control form-control-lg bg-light border-0" placeholder="Ej: Implementar autenticación..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold text-secondary small text-uppercase">Descripción</label>
                            <textarea asp-for="Description" class="form-control bg-light border-0" rows="4" placeholder="Describe los detalles de la tarea..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Grid for Selects -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="ProjectId" class="form-label fw-semibold text-secondary small text-uppercase">Proyecto</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="bi bi-folder"></i></span>
                                    <select asp-for="ProjectId" class="form-select bg-light border-0" asp-items="Model.Projects">
                                        <option value="">-- Seleccionar --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="ProjectId" class="text-danger small"></span>
                            </div>
                             <div class="col-md-6">
                                <label asp-for="AssignedToUserId" class="form-label fw-semibold text-secondary small text-uppercase">Asignado a</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="bi bi-person"></i></span>
                                    <select asp-for="AssignedToUserId" class="form-select bg-light border-0" asp-items="Model.Users">
                                        <option value="">Sin asignar</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold text-secondary small text-uppercase">Estado Inicial</label>
                                <select asp-for="Status" class="form-select bg-light border-0" asp-items="Html.GetEnumSelectList<TaskManagerMVC.Models.Enums.TaskItemStatus>()"></select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Priority" class="form-label fw-semibold text-secondary small text-uppercase">Prioridad</label>
                                <select asp-for="Priority" class="form-select bg-light border-0" asp-items="Html.GetEnumSelectList<TaskManagerMVC.Models.Enums.Priority>()"></select>
                            </div>
                        </div>
                        
                        <!-- Grid for Date and Hours -->
                        <div class="row g-3 mb-5">
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-semibold text-secondary small text-uppercase">Fecha Vencimiento</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="bi bi-calendar-event"></i></span>
                                    <input asp-for="DueDate" type="date" class="form-control bg-light border-0" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EstimatedHours" class="form-label fw-semibold text-secondary small text-uppercase">Horas Estimadas</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="bi bi-clock"></i></span>
                                    <input asp-for="EstimatedHours" type="number" step="0.5" class="form-control bg-light border-0" placeholder="0.0" />
                                </div>
                            </div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light px-4 text-muted fw-semibold">Cancelar</a>
                            <button type="submit" class="btn btn-primary px-5 fw-bold shadow-primary">
                                <i class="bi bi-check-lg me-2"></i>Crear Tarea
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
