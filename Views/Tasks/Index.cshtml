@model TaskManagerMVC.Models.ViewModels.TaskListViewModel
@{
    ViewData["Title"] = "Tareas";
}

<div class="container py-4">
    <!-- Header with Search/Filter capability could be added here later -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold font-poppins mb-1">Gesti√≥n de Tareas</h4>
            <p class="text-muted small mb-0">Administra todas las tareas de tus proyectos</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-primary">
            <i class="bi bi-plus-lg me-2"></i>Nueva Tarea
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 0.05em;">Tarea</th>
                        <th class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 0.05em;">Estado</th>
                        <th class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 0.05em;">Prioridad</th>
                        <th class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 0.05em;">Asignado a</th>
                        <th class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 0.05em;">Vencimiento</th>
                        <th class="text-end pe-4 text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 0.05em;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Tasks.Any())
                    {
                        @foreach (var task in Model.Tasks)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-semibold text-dark">@task.Title</div>
                                    <div class="small text-muted"> <i class="bi bi-folder2-open me-1"></i>@(task.Project?.Name ?? "Sin proyecto")</div>
                                </td>
                                <td>
                                    @{
                                        string statusClass = task.Status switch
                                        {
                                            TaskManagerMVC.Models.Enums.TaskItemStatus.Pending => "bg-danger text-danger",
                                            TaskManagerMVC.Models.Enums.TaskItemStatus.InProgress => "bg-warning text-warning",
                                            TaskManagerMVC.Models.Enums.TaskItemStatus.Completed => "bg-success text-success",
                                            _ => "bg-secondary text-secondary"
                                        };
                                        string statusLabel = task.Status switch {
                                            TaskManagerMVC.Models.Enums.TaskItemStatus.Pending => "Pendiente",
                                            TaskManagerMVC.Models.Enums.TaskItemStatus.InProgress => "En Progreso",
                                            TaskManagerMVC.Models.Enums.TaskItemStatus.Completed => "Completada",
                                            _ => task.Status.ToString()
                                        };
                                    }
                                    <span class="badge @statusClass bg-opacity-10 px-3 py-2 rounded-pill border border-opacity-10">@statusLabel</span>
                                </td>
                                <td>
                                    @{
                                        string priorityClass = task.Priority switch
                                        {
                                            TaskManagerMVC.Models.Enums.Priority.Low => "bg-success text-success",
                                            TaskManagerMVC.Models.Enums.Priority.Medium => "bg-info text-info",
                                            TaskManagerMVC.Models.Enums.Priority.High => "bg-danger text-danger",
                                            _ => "bg-secondary text-secondary"
                                        };
                                        string priorityLabel = task.Priority switch
                                        {
                                             TaskManagerMVC.Models.Enums.Priority.Low => "Baja",
                                             TaskManagerMVC.Models.Enums.Priority.Medium => "Media",
                                             TaskManagerMVC.Models.Enums.Priority.High => "Alta",
                                             _ => task.Priority.ToString()
                                        };
                                    }
                                     <span class="badge @priorityClass bg-opacity-10 px-3 py-2 rounded-pill">@priorityLabel</span>
                                </td>
                                <td>
                                    @if(task.AssignedToUser != null) {
                                         <div class="d-flex align-items-center">
                                            <div class="bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-2 border" style="width: 28px; height: 28px; font-size: 0.75rem;">
                                                @task.AssignedToUser.Username.Substring(0,1).ToUpper()
                                            </div>
                                            <span class="small">@task.AssignedToUser.Username</span>
                                        </div>
                                    } else {
                                        <span class="text-muted small fst-italic">Sin asignar</span>
                                    }
                                </td>
                                <td>
                                    @if(task.DueDate.HasValue)
                                    {
                                        <div class="d-flex align-items-center @(task.DueDate.Value < DateTime.UtcNow && task.Status != TaskManagerMVC.Models.Enums.TaskItemStatus.Completed ? "text-danger" : "text-muted")">
                                            <i class="bi bi-calendar3 me-2"></i>
                                            <span class="small">@task.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    }
                                    else
                                    {
                                         <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-light text-primary rounded-2 me-1" data-bs-toggle="tooltip" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline delete-form">
                                            <button type="submit" class="btn btn-sm btn-light text-danger rounded-2" data-bs-toggle="tooltip" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="bi bi-clipboard-x text-muted mb-3" style="font-size: 3rem;"></i>
                                <p class="text-muted mb-0">No se encontraron tareas.</p>
                                <a asp-action="Create" class="btn btn-link btn-sm mt-2">Crear nueva tarea</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
