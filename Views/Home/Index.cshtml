@model TaskManagerMVC.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">
    <!-- Hero Section -->
    <div class="row mb-5 align-items-center">
        <div class="col-lg-8 animate-fade-in">
            <h1 class="display-4 fw-bold font-poppins text-dark mb-3">
                Hola, <span class="text-primary">@ViewBag.CurrentUsername</span> 👋
            </h1>
            <p class="lead text-muted mb-4 border-start border-4 border-primary ps-3 bg-light py-2 rounded-end">
                Bienvenido a tu panel de control. Aquí tienes un resumen de tu actividad reciente y todo lo que necesitas para ser productivo hoy.
            </p>
            <div class="d-flex gap-3">
                <a asp-controller="Tasks" asp-action="Create" class="btn btn-primary btn-lg shadow-primary">
                    <i class="bi bi-plus-lg me-2"></i>Nueva Tarea
                </a>
                <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-folder2-open me-2"></i>Ver Proyectos
                </a>
            </div>
        </div>
        <div class="col-lg-4 d-none d-lg-block text-center animate-fade-in-delayed">
             <div class="p-5 bg-white rounded-circle shadow-sm d-inline-block position-relative">
                <i class="bi bi-rocket-takeoff text-primary" style="font-size: 5rem;"></i>
                <div class="position-absolute top-0 end-0 bg-success p-2 rounded-circle border border-white border-4"></div>
             </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 h-100 shadow-sm hover-lift">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-3 text-primary">
                        <i class="bi bi-folder-check fs-2"></i>
                    </div>
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Proyectos Activos</h6>
                        <h2 class="mb-0 fw-bold font-poppins">@Model.ActiveProjectsCount</h2>
                        <small class="text-success"><i class="bi bi-arrow-up-short"></i> Actualizado</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
             <div class="card border-0 h-100 shadow-sm hover-lift">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-4 me-3 text-warning">
                        <i class="bi bi-list-task fs-2"></i>
                    </div>
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Tareas Pendientes</h6>
                        <h2 class="mb-0 fw-bold font-poppins">@Model.PendingTasksCount</h2>
                        @if (Model.UrgentTasksCount > 0)
                        {
                            <small class="text-danger"><i class="bi bi-exclamation-circle"></i> @Model.UrgentTasksCount urgentes</small>
                        }
                        else
                        {
                            <small class="text-success"><i class="bi bi-check-all"></i> Todo bajo control</small>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
             <div class="card border-0 h-100 shadow-sm hover-lift">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 me-3 text-success">
                         <i class="bi bi-check-circle fs-2"></i>
                    </div>
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Completadas Hoy</h6>
                        <h2 class="mb-0 fw-bold font-poppins">@Model.CompletedTodayCount</h2>
                        <small class="text-success fw-semibold">¡Buen trabajo!</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 py-3 px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold font-poppins"><i class="bi bi-clock-history me-2 text-primary"></i>Actividad Reciente</h5>
            <a asp-controller="Tasks" asp-action="Index" class="btn btn-sm btn-link text-decoration-none">Ver todo</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tarea / Proyecto</th>
                        <th>Estado</th>
                        <th>Fecha</th>
                        <th class="text-end pe-4">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentActivity.Any())
                    {
                        @foreach (var task in Model.RecentActivity)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                            @task.Title.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@task.Title</div>
                                            <div class="small text-muted">@(task.Project?.Name ?? "Sin Proyecto")</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = task.Status == TaskManagerMVC.Models.Enums.TaskItemStatus.Completed ? "bg-success text-success" : 
                                                         task.Status == TaskManagerMVC.Models.Enums.TaskItemStatus.InProgress ? "bg-warning text-warning" : "bg-secondary text-secondary";
                                    }
                                    <span class="badge @badgeClass bg-opacity-10 px-3 py-2 rounded-pill">@task.Status</span>
                                </td>
                                <td class="text-muted small">
                                    @{
                                        var date = task.UpdatedAt ?? task.CreatedAt;
                                        var dateString = date.Date == DateTime.UtcNow.Date ? $"Hoy, {date:t}" : date.ToString("g");
                                    }
                                    @dateString
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-light rounded-circle"><i class="bi bi-eye"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                No hay actividad reciente. <a asp-controller="Tasks" asp-action="Create">¡Crea una tarea!</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-primary) !important;
    }
    
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }
    .animate-fade-in-delayed {
        animation: fadeIn 0.8s ease-out 0.2s backwards;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
