@model TaskManagerMVC.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-person-plus fs-2"></i>
                    </div>
                    <h3 class="fw-bold font-poppins text-dark">Crear Cuenta</h3>
                    <p class="text-muted small">Únete a Task Manager para organizar tus proyectos.</p>
                </div>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 py-2 small rounded-3 border-0"></div>

                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-semibold text-secondary small text-uppercase">Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control form-control-lg bg-light border-0" placeholder="Elige un nombre de usuario" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold text-secondary small text-uppercase">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control form-control-lg bg-light border-0" placeholder="ejemplo@correo.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Password" class="form-label fw-semibold text-secondary small text-uppercase">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control form-control-lg bg-light border-0" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold text-secondary small text-uppercase">Confirmar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="bi bi-check2-circle"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg bg-light border-0" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg shadow-primary fw-bold mb-3">
                        Registrarse Gratis
                    </button>
                    
                    <div class="text-center">
                        <span class="text-muted small">¿Ya tienes una cuenta?</span>
                        <a asp-action="Login" class="text-primary fw-bold text-decoration-none small ms-1">Inicia sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
