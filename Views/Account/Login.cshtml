@model TaskManagerMVC.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-layers-half fs-2"></i>
                    </div>
                    <h3 class="fw-bold font-poppins text-dark">Task Manager</h3>
                    <p class="text-muted small">Bienvenido de nuevo, por favor ingresa tus credenciales.</p>
                </div>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 py-2 small rounded-3 border-0"></div>

                <form asp-action="Login" method="post">
                    <div class="mb-4">
                        <label asp-for="Username" class="form-label fw-semibold text-secondary small text-uppercase">Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control form-control-lg bg-light border-0" placeholder="Nombre de usuario" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-semibold text-secondary small text-uppercase">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control form-control-lg bg-light border-0" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 form-check">
                         <!-- Opcional: Remember Me si existiera en el modelo -->
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg shadow-primary fw-bold mb-3">
                        Iniciar Sesión
                    </button>
                    
                    <div class="text-center">
                        <span class="text-muted small">¿No tienes una cuenta?</span>
                        <a asp-action="Register" class="text-primary fw-bold text-decoration-none small ms-1">Regístrate aquí</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-4">
            <small class="text-muted opacity-75">&copy; 2025 Task Manager SaaS</small>
        </div>
    </div>
</div>

